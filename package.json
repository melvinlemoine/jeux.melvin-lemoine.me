{
  "name": "integration-starter-template",
  "version": "1.0.0",
  "scripts": {
    "deploy": "npm run assets && npm run build-clean && npm run build-sass && npm run build-autoprefix && npm run build-cleancss",
    "build-autoprefix": "postcss --use autoprefixer --map false --output dist/css/styles.css dist/css/styles.css",
    "build-cleancss": "cleancss -o dist/css/styles.css dist/css/styles.css",
    "build-clean": "rimraf css",
    "compress-images": "sharp resize 1920 -q 85 -f webp -i src/images/* -o dist/images",
    "build-sass": "node-sass --output-style expanded --source-map true sass/styles.sass dist/css/styles.css",
    "watch": "npm run build-sass -- --watch",
    "assets": "rimraf dist && copyfiles -f src/fonts/* dist/fonts && copyfiles -f src/js/* dist/js && copyfiles -f src/css/* dist/css && copyfiles -f src/images/* dist/images"
  },
  "author": "https://github.com/melvinlemoine",
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.14.1",
    "postcss-cli": "^6.1.3",
    "rimraf": "^2.7.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-webp": "^6.0.0",
    "sharp-cli": "^1.15.0"
  },
  "description": "",
  "dependencies": {
    "copyfiles": "^2.4.1"
  }
}
